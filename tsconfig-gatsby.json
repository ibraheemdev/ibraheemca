{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "strict": true,
    "noEmit": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": [
    "./config.ts",
    "./postcss-config.ts",
    "./gatsby-config.ts",
    "./gatsby-node.ts",
    "./gatsby-browser.ts",
    "./gatsby/**/*",
    "./src/cms/**/*",
  ]
}
